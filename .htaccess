RewriteEngine On
#RewriteBase /berke_insaat
options all -Indexes
Options +FollowSymlinks

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d


RewriteRule ^anasayfa$ index.php?page=index [L,QSA]
RewriteRule ^hakkimizda$ index.php?page=about [L,QSA]
RewriteRule ^projelerimiz$ index.php?page=projects [L,QSA]
RewriteRule ^blog-listesi$ index.php?page=blog [L,QSA]
RewriteRule ^iletisim$ index.php?page=contact [L,QSA]
RewriteRule ^404$ index.php?page=404 [L,QSA]

RewriteRule ^faaliyet_alanlari/([0-9a-zA-Z-_]+)$  index.php?page=fileds_of_activity&id=$1 [L,QSA,NC]
RewriteRule ^proje/([0-9a-zA-Z-_]+)$  index.php?page=project_details&project_id=$1 [L,QSA,NC]
RewriteRule ^blog/([0-9a-zA-Z-_]+)$  index.php?page=blog_details&id=$1 [L,QSA,NC]

